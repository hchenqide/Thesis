{
    "latex-workshop.latex.outDir": "./build",
    "latex-workshop.latex.tools": [
        {
            "name": "latexmk",
            "command": "latexmk",
            "args": [
                "-pdf",
                "-shell-escape",
                "-synctex=1",
                "-interaction=nonstopmode",
                "-outdir=build",
                "%DOC%"
            ]
        }
    ],
    "latex-workshop.latex.recipes": [
        {
            "name": "latexmk",
            "tools": [
                "latexmk"
            ]
        }
    ],
    "latex-workshop.formatting.latex": "tex-fmt",
    "editor.wordWrap": "on",
    "editor.tabSize": 2
}